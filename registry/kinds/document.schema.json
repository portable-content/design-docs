{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://portablecontent.dev/registry/kinds/document.schema.json",
  "title": "Document content",
  "description": "Document content structure (external only) with optional alternatives",
  "allOf": [
    { "$ref": "../../schemas/block-content.schema.json" },
    {
      "properties": {
        "primary": {
          "allOf": [
            { "$ref": "../../schemas/payload-source.schema.json" },
            {
              "properties": {
                "type": {
                  "const": "external",
                  "description": "Documents are always external content"
                },
                "pages": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Number of pages in the document"
                }
              }
            }
          ]
        },
        "alternatives": {
          "type": "array",
          "items": { "$ref": "../../schemas/payload-source.schema.json" }
        }
      }
    }
  ]
}

