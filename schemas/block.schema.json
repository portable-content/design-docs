{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://portablecontent.dev/spec/schemas/block.schema.json",
  "title": "Block",
  "type": "object",
  "required": ["id", "kind", "variants"],
  "properties": {
    "id": { "type": "string" },
    "kind": { "type": "string" },
    "payload": { "type": ["object", "string", "null"] },
    "variants": {
      "type": "array",
      "items": { "$ref": "#/definitions/Variant" },
      "minItems": 0
    }
  },
  "definitions": {
    "Variant": {
      "type": "object",
      "required": ["mediaType"],
      "properties": {
        "mediaType": { "type": "string" },
        "uri": { "type": ["string", "null"] },
        "width": { "type": ["integer", "null"], "minimum": 0 },
        "height": { "type": ["integer", "null"], "minimum": 0 },
        "bytes": { "type": ["integer", "null"], "minimum": 0 },
        "contentHash": { "type": ["string", "null"] },
        "generatedBy": { "type": ["string", "null"] },
        "toolVersion": { "type": ["string", "null"] },
        "createdAt": { "type": ["string", "null"], "format": "date-time" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

